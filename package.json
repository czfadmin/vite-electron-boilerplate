{
  "name": "vite-electron-boilerplate-monorepo",
  "private": true,
  "author": "czfadmin",
  "description": "Vite Electron Boilerplate",
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "vite",
    "electron",
    "typescript"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "node scripts/preinstall",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --ext .ts"
    ],
    "packages/**/*.d.ts": [
      "eslint --ext .ts"
    ]
  },
  "dependencies": {
    "kolorist": "^1.5.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "eslint": "^8.1.0",
    "eslint-define-config": "^1.1.1",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1"
  },
  "packageManager": "pnpm"
}
